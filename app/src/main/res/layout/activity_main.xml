<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:dn="http://schemas.android.com/apk/res-auto"
    tools:context="com.huishouge.personalizedslidingindicator.MainActivity">

    <com.huishouge.personalizedslidingindicator.view.PersoSlidiIndicListView
        android:id="@+id/lv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:choiceMode="singleChoice"
        android:scrollbarThumbVertical="@drawable/scrollbar_vertical_thumb"
        android:scrollbarSize="7dip"
        dn:scrollBarPanel="@layout/scrollbarpanel"
        dn:scrollBarPanelInAnimation="@anim/in"
        dn:scrollBarPanelOutAnimation="@anim/out"
        />

</android.support.constraint.ConstraintLayout>
